<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Project Dashboard</title>
  <link rel="stylesheet" href="styles.css"/>
</head>
<body>
  <div class="container">
    <h1>Project Dashboard</h1>
    <div class="settings">
      <h2>Chemin du répertoire source</h2>
      <input type="text" id="sourceDir" placeholder="Ex: /home/user/myproject" readonly />
      <button id="chooseDirBtn">Choisir un répertoire</button>
      <div id="selectedDirInfo"></div>

      <h2>Formats disponibles</h2>
      <select id="formatSelect"></select>
      
      <h2>Final Request (final_request.yaml)</h2>
      <textarea id="finalRequest" rows="5" placeholder="Tapez votre final_request.yaml ici..."></textarea>
    </div>
    <button id="generateBtn">Générer</button>
    <button id="configPageBtn">Gérer les configurations</button>
    <div class="output">
      <h2>Prompt généré</h2>
      <pre id="promptOutput"></pre>
    </div>
  </div>

  <!-- Modal pour explorer les répertoires -->
  <div id="dirModal" class="modal">
    <div class="modal-content">
      <h2>Explorer les répertoires</h2>
      <div id="pathDisplay"></div>
      <div id="dirList"></div>
      <button id="selectThisDirBtn">Sélectionner ce répertoire</button>
      <button id="closeModalBtn">Fermer</button>
    </div>
  </div>

  <script src="main.js"></script>
</body>
</html>
